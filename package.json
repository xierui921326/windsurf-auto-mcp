{
  "name": "windsurf-auto-mcp",
  "displayName": "WindsurfAutoMcp",
  "description": "Windsurf MCP 自动化工具 - 任务完成确认、用户交互、一键配置",
  "version": "1.0.2",
  "publisher": "windsurf-auto-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/xierui921326/windsurf-auto-mcp"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "mcp",
    "windsurf",
    "ai",
    "claude"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcpServicePanel",
          "title": "WindsurfAutoMcp",
          "icon": "$(server)"
        }
      ]
    },
    "views": {
      "mcpServicePanel": [
        {
          "type": "webview",
          "id": "mcpServicePanel.sidebarView",
          "name": "控制面板"
        }
      ]
    },
    "commands": [
      {
        "command": "mcpService.toggleDialog",
        "title": "WindsurfAutoMcp: 开启对话窗口 (Ctrl+M)"
      }
    ],
    "keybindings": [
      {
        "command": "mcpService.toggleDialog",
        "key": "ctrl+m",
        "mac": "cmd+m"
      }
    ],
    "configuration": {
      "title": "WindsurfAutoMcp",
      "properties": {
        "mcpService.port": {
          "type": "number",
          "default": 3456,
          "description": "MCP HTTP服务器端口"
        },
        "mcpService.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "启动时自动启动服务器"
        },
        "mcpService.mode": {
          "type": "string",
          "enum": [
            "http",
            "stdio"
          ],
          "default": "http",
          "description": "MCP服务器模式：http=HTTP模式，stdio=标准输入输出模式"
        },
        "mcpService.autoShowChat": {
          "type": "boolean",
          "default": false,
          "description": "启动时自动显示 WindsurfAutoMcp 界面"
        },
        "mcpService.optimizationEnabled": {
          "type": "boolean",
          "default": false,
          "description": "启用指令优化功能"
        },
        "windsurfAutoMcp.apiKey": {
          "type": "string",
          "default": "",
          "description": "智谱 AI API Key（用于指令优化和上下文摘要）"
        },
        "windsurfAutoMcp.model": {
          "type": "string",
          "enum": ["GLM-4.5-Flash", "GLM-4-Flash", "custom"],
          "default": "GLM-4.5-Flash",
          "description": "选择使用的 AI 模型"
        },
        "windsurfAutoMcp.additionalRules": {
          "type": "string",
          "default": "请遵循以下规则：\n1. 用中文回复\n2. 提供详细的解释和示例\n3. 如果涉及代码，请提供完整可运行的代码\n4. 优先考虑最佳实践和安全性\n5. 如有疑问请主动询问澄清",
          "description": "每次发送时自动追加的内容"
        },
        "windsurfAutoMcp.autoOptimize": {
          "type": "boolean",
          "default": false,
          "description": "开启后自动优化指令再发送"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  }
}